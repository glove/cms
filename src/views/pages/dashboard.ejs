<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href= "/static/css/dashboard.css" rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/12e4489aef.js" crossorigin="anonymous"></script>
    <title>CMS | Dashboard</title>
</head>
<body>
<%- include('../components/sidebar'); %>
<div class="container">
    <div class="header">
        <h4>Administrator Dashboard</h4>
        <i class="fa-solid fa-house-user"></i> / Dashboard
    </div>
    <div class="page-contents">
        <ul id="components">

            <li>
                <div id="title">Username</div>
                <i class="fa-solid fa-user"></i>
                <span id="name"><%= name %></span>
            </li>
            <li>
                <div id="title">Role</div>
                <i class="fa-solid fa-clipboard-user"></i>
                <span id="role"><%= role %></span>
            </li>
            <li>
                <div id="title">Total Users</div>
                <i class="fa-solid fa-users"></i>
                <span id="total-users">0</span>
            </li>
            <li>
                <div id="title">Active Tickets</div>
                <i class="fa-solid fa-ticket"></i>
                <span id="active-tickets">0</span>
            </li>
        </ul>
    </div>
    <script src= "/static/scripts/dashboard.js"></script>
</div>
</body>
</html>